#include <iostream>
using namespace std;

void function(int x[], int size);

int main()
{
  int a[7];
  cout << sizeof(a) << endl; //28 is total number of bytes allocated for the array
  cout<< &a << endl; //Address of array 'a'
  cout<< *a << endl; //4196608
  cout<< sizeof(*a) ; //4
  cout<< sizeof(a) / sizeof(*a) ; //7 ONe way
  cout<< sizeof(a) / sizeof(a[0]) ; //7  
  return 0;
}

